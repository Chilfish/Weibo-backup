{
  "manifest_version": 2,
  "name": "Speechless 微博备份",
  "version": "2.0",
  "author": "Chilfish",
  "homepage_url": "https://github.com/Chilfish/Weibo-backup",
  "description": "把新浪微博的内容，导出成 HTML 文件进行备份",
  "icons": {
    "16": "icons/Speechless16.png",
    "32": "icons/Speechless32.png",
    "48": "icons/Speechless48.png",
    "128": "icons/Speechless128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/jquery-3.6.1.min.js",
        "scripts/content.js"
      ],
      "css": [
        "style/speechless.css"
      ],
      "matches": [
        "https://weibo.com/u/*",
        "https://weibo.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "chill4fish@gmail.com"
    }
  }
}